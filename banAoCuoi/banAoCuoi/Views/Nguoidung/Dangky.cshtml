
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
     #giaban{
            padding-bottom:2em;
            color: orange;
            text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;
    }
     #textsd{
         text-shadow: 2px 4px 3px rgba(0,0,0,0.3);
     }
     .box{
         border-radius:15px; 
     }
     body{
              background-image:url('../../images/bgchung.png');
              position: relative;
    }
</style>
<table id="giaban" align="center" style="background-color:white">
    <h2 id="textsd" style="text-align:center;color:red">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td class="box">@Html.TextBox("HotenKH")@ViewData["Loi1"]</td>
        </tr>
            <tr style="height:40px">
                <td>Tên đăng nhập:</td>
                <td class="box">@Html.TextBox("TenDN")@ViewData["Loi2"]</td>
            </tr>
            <tr style="height:40px">
                <td>Mật khẩu:</td>
                <td class="box">@Html.Password("Matkhau")@ViewData["Loi3"]</td>
            </tr>
            <tr style="height:40px">
                <td>Nhập lại mật khẩu:</td>
                <td class="box">@Html.Password("Matkhaunhaplai")@ViewData["Loi4"]</td>
            </tr>
            <tr style="height:40px">
                <td>Điện thoại:</td>
                <td class="box">@Html.TextBox("Dienthoai")@ViewData["Loi6"]</td>
            </tr>
            <tr style="height:40px">
                <td>Email:</td>
                <td class="box">@Html.TextBox("Email")@ViewData["Loi5"]</td>
            </tr>
            <tr style="height:40px">
                <td>Ngày sinh:</td>
                <td class="box">
                    <input type="date" value="Ngày sinh" />
                </td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td class="box">
                    <input type="submit" value="Đăng ký" />
                </td>
            </tr>
    }
</table>


